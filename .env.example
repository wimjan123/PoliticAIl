# Political Desktop OS Simulation - Environment Configuration Example
# Copy this file to .env.development for local development
# DO NOT commit actual credentials to version control

# ===============================
# DATABASE CONFIGURATION
# ===============================

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password_here
MONGO_DATABASE=politicai
MONGO_HOST=localhost
MONGO_PORT=27017

# Application MongoDB User (created by init script)
MONGO_APP_USERNAME=politicai_app
MONGO_APP_PASSWORD=your_app_password_here

# MongoDB Connection String for Application
MONGODB_URL=mongodb://politicai_app:your_app_password_here@localhost:27017/politicai

# ===============================
# CACHE AND QUEUE CONFIGURATION
# ===============================

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Connection String
REDIS_URL=redis://localhost:6379/0

# Redis Cache Settings
REDIS_CACHE_TTL=3600
REDIS_CACHE_PREFIX=politicai:cache:

# LLM Job Queue Settings
REDIS_QUEUE_PREFIX=politicai:queue:
REDIS_QUEUE_DEFAULT_TTL=86400

# ===============================
# SEARCH ENGINE CONFIGURATION
# ===============================

# Elasticsearch Configuration (Optional)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_PREFIX=politicai

# Elasticsearch Connection String
ELASTICSEARCH_URL=http://localhost:9200

# ===============================
# APPLICATION CONFIGURATION
# ===============================

# Environment
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug

# Application Settings
APP_NAME=Political Desktop OS Simulation
APP_VERSION=1.0.0
APP_PORT=3000
APP_HOST=localhost

# Game Engine Settings
GAME_TICK_INTERVAL=1000
SIMULATION_SPEED_MULTIPLIER=1.0
MAX_CONCURRENT_EVENTS=50

# ===============================
# SECURITY CONFIGURATION
# ===============================

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Security
API_RATE_LIMIT_REQUESTS=1000
API_RATE_LIMIT_WINDOW=3600
CORS_ORIGIN=http://localhost:3000

# Session Security
SESSION_SECRET=your_session_secret_minimum_32_characters
SESSION_MAX_AGE=86400000

# ===============================
# LLM INTEGRATION CONFIGURATION
# ===============================

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_MAX_TOKENS=2048

# Local LLM Configuration (Optional)
LOCAL_LLM_ENDPOINT=http://localhost:11434
LOCAL_LLM_MODEL=llama3

# LLM Usage Settings
LLM_DEFAULT_PROVIDER=openai
LLM_FALLBACK_PROVIDERS=anthropic,local
LLM_REQUEST_TIMEOUT=30000
LLM_MAX_RETRIES=3

# ===============================
# NEWS API CONFIGURATION
# ===============================

# NewsAPI Configuration
NEWSAPI_KEY=your_newsapi_key_here
NEWSAPI_COUNTRY=us
NEWSAPI_CATEGORY=politics
NEWSAPI_PAGE_SIZE=50

# Media Bias/Fact Check API
MBFC_API_KEY=your_mbfc_api_key_here
MBFC_BASE_URL=https://api.mediabiasfactcheck.com

# News Processing Settings
NEWS_FETCH_INTERVAL=300000
NEWS_RELEVANCE_THRESHOLD=0.6
NEWS_MAX_ARTICLES_PER_BATCH=100

# ===============================
# SOCIAL MEDIA INTEGRATION
# ===============================

# Twitter API Configuration
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Social Media Processing
SOCIAL_MEDIA_PERSONA_COUNT=50
SOCIAL_MEDIA_POST_FREQUENCY=3600000
SOCIAL_MEDIA_ENGAGEMENT_SIMULATION=true

# ===============================
# DEVELOPMENT TOOLS CONFIGURATION
# ===============================

# MongoDB Express Configuration
MONGO_EXPRESS_USERNAME=dev
MONGO_EXPRESS_PASSWORD=politicai123

# Redis Commander Configuration
REDIS_COMMANDER_USERNAME=dev
REDIS_COMMANDER_PASSWORD=politicai123

# Development Database Seeding
SEED_DATABASE_ON_START=true
SEED_SAMPLE_POLITICIANS=true
SEED_SAMPLE_POLICIES=true
SEED_SAMPLE_EVENTS=true

# ===============================
# MONITORING AND ANALYTICS
# ===============================

# Application Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_ENDPOINT=/metrics

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# Error Tracking
ERROR_TRACKING_ENABLED=true
ERROR_TRACKING_DSN=your_error_tracking_dsn_here

# Logging Configuration
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# ===============================
# UI AND DESKTOP CONFIGURATION
# ===============================

# Tauri Configuration
TAURI_DEBUG=true
TAURI_DEV_PATH=http://localhost:3000
TAURI_DIST_DIR=../dist

# Window Management
DEFAULT_WINDOW_WIDTH=1200
DEFAULT_WINDOW_HEIGHT=800
ENABLE_MULTI_WINDOW=true
ENABLE_WINDOW_PERSISTENCE=true

# Theme Configuration
DEFAULT_THEME=light
ENABLE_DARK_MODE=true
ENABLE_SYSTEM_THEME=true

# ===============================
# BACKUP AND MAINTENANCE
# ===============================

# Database Backup
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Data Retention
EVENT_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30
CACHE_CLEANUP_INTERVAL=3600000

# ===============================
# EXTERNAL SERVICES
# ===============================

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Webhook URLs
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# ===============================
# FEATURE FLAGS
# ===============================

# Feature Toggles
ENABLE_REAL_TIME_NEWS=true
ENABLE_SOCIAL_MEDIA_SIMULATION=true
ENABLE_LLM_PERSONAS=true
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_MULTIPLAYER=false

# Experimental Features
ENABLE_BETA_FEATURES=false
ENABLE_DEBUG_FEATURES=true
ENABLE_PERFORMANCE_PROFILING=false